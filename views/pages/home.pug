extends ../base.pug

block variables
	- var template = 'home'

block content
	
	section.hero
		.hero__title_wrapper
			h1.hero__title=home.data.title
			h2.hero__subtitle=home.data.subtitle
		.hero__image-mask
			figure.hero__image_wrapper
				img.hero__image(data-lazy="img" data-src=home.data.home_images[random].image.url, alt=home.data.home_images[random].image.alt draggable="false")

	section.niches
		each niche in nichesData
			
			.niches_wrapper(id=niche.uid)
				a.niches__link(href=`/${niche.uid}` draggable="false")
					h3.niches__link__title.--mobile=niche.data.title.replace('_', ' ')
					ul.niches__list
						each image in niche.images
							li.niches__item
								.niches__item__image_wrapper
									img.niches__item__image(data-lazy="img" data-src=image.url alt=image.alt draggable="false")
					h3.niches__link__title.--desktop
						each title in niche.data.title.split(' ')
							span=title.replace('_', ' ')